# vim: ft=conf nospell
browser /usr/bin/w3m
external-url-viewer /usr/bin/urlview
always-display-description true
goto-next-feed no
text-width 78
max-items 500

# Filters
define-filter "Starred" "flags # \"S\""

auto-reload yes
feed-sort-order title-dec
max-downloads 4
player mplayer
refresh-on-startup no
suppress-first-reload yes
reload-time 20
reload-threads 2
show-read-articles yes
show-read-feeds yes

# key binding --------------------

unbind-key j
unbind-key k
unbind-key J
unbind-key K
unbind-key g all
unbind-key G all

bind-key j down all
bind-key k up all
bind-key J next-feed
bind-key K prev-feed
bind-key g home all
bind-key G end all

bind-key u pageup all
bind-key d pagedown all
