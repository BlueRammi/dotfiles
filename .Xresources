! ------------------------------------------------------------
! URxvt plugins
! ------------------------------------------------------------

! Perl extensions
URxvt.perl-ext             : default,url-select
URxvt.keysym.M-u           : perl:url-select:select_next
URxvt.url-select.launcher  : /usr/bin/qutebrowser
URxvt.url-select.underline : true

! Plugin: 'urxvt-resize-font-git'
URxvt.perl-ext-common     : resize-font
URxvt.resize-font.smaller : C-Down
URxvt.resize-font.bigger  : C-Up

! ------------------------------------------------------------
! XTerm
! ------------------------------------------------------------

xterm*termName        : xterm-256color
xterm*renderFont      : true
xterm*faceName        : DejavuSansMonoForPowerline
xterm*faceSize        : 13
xterm*locale          : true
xterm*metaSendsEscape : true
xterm*eightBitInput   : false
xtere*eightBitControl : false
xterm*eightBitOutput  : true
xterm*loginShell      : true
xterm*scrollBar       : false
xterm*saveLines       : 100
xterm*utf8            : 2
xterm*jumpScroll      : true
xterm*multiScroll     : true
xterm*trimSelection   : true

xterm*background      : base1
xterm*foreground      : base4
xterm*cursorColor     : base4
xterm*cursorUnderline : true
xterm*cursorBlink     : false
xterm*dynamicColors   : true
xterm*boldMode        : false
xterm*colorBDMode     : true
xterm*colorBD         : base4

xterm*VT100.Translations: #override \
	Ctrl Alt <Key>V: insert-selection(CLIPBOARD) \n\
	Ctrl Alt <Key>C: copy-selection(CLIPBOARD) \n\

xterm*charClass: 33:48,37-38:48,45-47:48,64:48,58:48,126:48,61:48,63:48,43:48,35:48

! ------------------------------------------------------------
! Rofi
! ------------------------------------------------------------

rofi.terminal          : /usr/bin/urxvtc
rofi.run-shell-command : /usr/bin/urxvtc -e '{cmd}'
rofi.ssh-command       : tmux split-window -h -p 50 '{ssh-client} {host}'
rofi.sidebar-mode      : true
rofi.fuzzy             : true
rofi.font              : Terminus\ 12
rofi.location          : 0
rofi.width             : 34
rofi.padding           : 8
rofi.borderwidth       : 1
rofi.columns           : 1
rofi.lines             : 10
rofi.separator-style   : solid

! Key bindings
rofi.kb-accept-entry        : Control+m,Return,KP_Enter
rofi.kb-cancel              : Escape,Control+c
rofi.kb-mode-next           : Control+l
rofi.kb-mode-previous       : Control+h
rofi.kb-row-down            : Control+j
rofi.kb-row-up              : Control+k
rofi.kb-remove-to-eol       : Control+y
rofi.kb-remove-to-sol       : Control+u
rofi.kb-remove-char-back    : Control+s,BackSpace
rofi.kb-remove-char-forward : Control+d,Delete

! Colors            bg     fg     altbg  hlbg   hlfg
rofi.color-normal : base1, base4, base1, base3, base1
rofi.color-urgent : base1, acr50, base1, acr50, base1
rofi.color-active : base1, acc50, base1, acc50, base1
rofi.color-window : base1, base3, base3
rofi.bw           : 1
