#!/usr/bin/env bash
#
# Description: Preview Jekyll localhost:4000 with the w3m browser
#
# Old usage with xterm and w3m configured to display images:
# xterm -e w3m -config ~/.w3m/config_img http://localhost:4000/

INUSE=$(lsof -i :4000)

if [ "$INUSE" ]; then
	urxvt \
		-b 55 \
		-fn "xft:DejaVu Sans Mono for Powerline:size=13" \
		-e w3m http://localhost:4000/
else
	notify-send "Localhost is not running."
fi
